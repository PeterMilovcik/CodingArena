<UserControl x:Class="CodingArena.Game.Wpf.Battlefield.BattlefieldBotControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Canvas>
        <Canvas.RenderTransform>
            <TranslateTransform X="{Binding X}" Y="{Binding Y}" />
        </Canvas.RenderTransform>
        <Image Source="{Binding ImageSource}" Height="40" />
        <Label Content="{Binding BotName}" FontSize="14" Margin="0,28,0,0" />
        <ProgressBar Height="3" Width="30" 
                     Maximum="{Binding MaxSP}" 
                     Value="{Binding SP}" 
                     Visibility="{Binding ProgressBarVisibility}"
                     Foreground="Blue">
            <ProgressBar.RenderTransform>
                <TranslateTransform X="6"  Y="-9"/>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <ProgressBar Height="3" Width="30" 
                     Maximum="{Binding MaxHP}" 
                     Value="{Binding HP}" 
                     Visibility="{Binding ProgressBarVisibility}"
                     Foreground="Green">
            <ProgressBar.RenderTransform>
                <TranslateTransform X="6"  Y="-6"/>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <ProgressBar Height="3" Width="30" 
                     Maximum="{Binding MaxEP}" 
                     Value="{Binding EP}" 
                     Visibility="{Binding ProgressBarVisibility}"
                     Foreground="Red">
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <TranslateTransform X="-30"  Y="35"/>
                    <RotateTransform Angle="-90"/>
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>
    </Canvas>
</UserControl>
