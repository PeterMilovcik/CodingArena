<UserControl x:Class="CodingArena.Game.Wpf.Battlefield.BattlefieldBotControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CodingArena.Game.Wpf.Battlefield"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Canvas>
        <Canvas.RenderTransform>
            <TranslateTransform X="{Binding X}" Y="{Binding Y}" />
        </Canvas.RenderTransform>
        <Image Source="{Binding ImageSource}" Height="40" />
        <Label Content="{Binding BotName}" FontSize="14" Margin="0,28,0,0" />
    </Canvas>
</UserControl>
